{
  "extends": ["tslint-react", "tslint-eslint-rules"],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single", "jsx-double"],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-reference": true,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false
  }
}
