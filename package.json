    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0"
  },
  "commitlint": {
