{
  "name": "x6",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "sites/*"
  ],
  "scripts": {
    "build:dev": "sh ./scripts/build-dev",
    "build:apps": "sh ./scripts/build-apps",
    "build:demos": "sh ./scripts/build-demos",
    "build:sites": "sh ./scripts/build-sites",
    "build:version": "lerna run build:version",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test --no-private",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick",
    "clean": "lerna run clean",
    "clear": "lerna run clean && lerna clean -y",
    "clean:modules": "rimraf node_modules",
    "bootstrap": "lerna bootstrap && yarn build:dev",
    "reboot": "run-s clear clean:modules bootstrap",
    "postinstall": "husky install",
    "precommit": "lerna run --concurrency 1 --stream precommit"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€”-staged"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [2, "always", 200]
    }
  },
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^12.0.1",
    "devmoji": "^2.1.9",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.1",
    "karma": "^6.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.2.0",
    "karma-typescript-es6-transform": "^5.2.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.1.2"
  }
}
